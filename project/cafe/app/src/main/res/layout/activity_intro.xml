<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cafe.introActivity">
    
    <android.support.v4.view.ViewPager
        android:id="@+id/intro_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </android.support.v4.view.ViewPager>
    
    <LinearLayout
        android:id="@+id/bottom_dot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottm_dot_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_pre"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/bottm_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:text="@string/button_pre"/>
    
    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/bottm_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text="@string/button_next"/>
    

</RelativeLayout>
