<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 필요한 속성 3가지
            1. ImageView에 넣을 값
            2. TextView(name)에 넣을 속성 값
            3. TextView(age)에 넣을 속성 값
            -->
    
    <declare-styleable name="PersonView">
        
        <attr name="my_photo" format="reference" />
        <attr name="my_name"  format="string" />
        <attr name="my_age"   format="integer" />
        
    </declare-styleable>
</resources>